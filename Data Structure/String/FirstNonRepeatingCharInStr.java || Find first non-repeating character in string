import java.util.HashMap;
import java.util.Map;

public class FirstNonRepeatingCharInStr {
    public static void main1(String[] args) {
        // this solution create sproblem for aaabbbbbc this kind of string because c is
        // at last
        String str = "aaabbc";
        boolean isFound = false;
        for (int i = 0; i < str.length() - 1; i++) { // O(n^2)
            isFound = false;
            for (int j = i + 1; j < str.length(); j++) {
                if (str.charAt(i) == str.charAt(j)) {
                    isFound = true;
                }
            }
            if (!isFound) {
                System.out.println("First non-repeating character in string : \"" + str.charAt(i) + "\"");
                break;
            }
        }
        if (isFound) {
            System.out.println("No non repeating character");
        }
    }

    public static void main(String[] args) {
        String str = "caaabbc";

        Map<Character, Integer> frequency = new HashMap<>();

        for (char ele : str.toCharArray()) {
            frequency.put(ele, frequency.getOrDefault(ele, 0) + 1);
        }

        for (char ele : str.toCharArray()) {
            if (frequency.get(ele) == 1) {
                System.out.println("First non repeating character " + ele);
                return;
            }

        }
        System.out.println("No non repeating");
    }

}

